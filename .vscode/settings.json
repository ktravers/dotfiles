{
  "breadcrumbs.icons": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.symbolPath": "off",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    100
  ],
  // TODO: update after https://github.com/rubyide/vscode-ruby/issues/548 is merged
  "editor.formatOnSave": false,
  "editor.scrollBeyondLastLine": false,
  "eslint.run": "onSave",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "files.exclude": {
    "vendor/*": true
  },
  "gitlens.blame.avatars": false,
  "gitlens.blame.highlight.locations": [
    "gutter",
    "line"
  ],
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "ruby.format": "rubocop",
  "ruby.useBundler": false,
  "ruby.useLanguageServer": true,
  "search.enableSearchEditorPreview": true,
  "search.location": "panel",
  "window.zoomLevel": 1,
  "workbench.activityBar.visible": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 4,
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "search.showLineNumbers": true,
  "editor.find.addExtraSpaceOnTop": false,
  // Specific to github/github
  "ruby.interpreter.commandPath": "bin/safe-ruby-quick",
  "ruby.lint": {
    "rubocop": {
      "command": "bin/rubocop",
      "useBundler": false,
    },
  },
  "ruby.pathToBundler": "bin/bundle"
}