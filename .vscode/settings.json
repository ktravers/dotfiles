{
  "bracketPairColorizer.depreciation-notice": false,
  "breadcrumbs.icons": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.symbolPath": "off",
  "comments.openView": "never",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.codeLens": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontSize": 17,
  "editor.formatOnPaste": true, // TODO: enable after https://github.com/rubyide/vscode-ruby/issues/548 is merged
  "editor.formatOnSave": false, // TODO: enable after https://github.com/rubyide/vscode-ruby/issues/548 is merged
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    100
  ],
  "editor.scrollBeyondLastLine": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "emmet.triggerExpansionOnTab": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.run": "onSave",
  "files.exclude": {
    "vendor/*": true
  },
  "files.insertFinalNewline": true,
  "git.enableCommitSigning": true,
  "git.suggestSmartCommit": false,
  "githubPullRequests.commentExpandState": "collapseAll",
  "gitlens.blame.avatars": false,
  "gitlens.blame.highlight.locations": [
    "gutter",
    "line"
  ],
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.gitCommands.search.matchCase": true,
  "ruby.format": "rubocop",
  "ruby.pathToBundler": "bin/bundle",
  "ruby.useBundler": false,
  "ruby.useLanguageServer": true,
  "search.enableSearchEditorPreview": true,
  "search.mode": "newEditor",
  "search.searchEditor.defaultNumberOfContextLines": 2,
  "search.showLineNumbers": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "window.autoDetectColorScheme": true,
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Solarized Light",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": false,
  "workbench.layoutControl.enabled": false,
  "workbench.layoutControl.type": "menu",
  "workbench.preferredDarkColorTheme": "GitHub Dark",
  "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
  "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 4,
  // Specific to github/github
  "ruby.interpreter.commandPath": "bin/safe-ruby-quick",
  "ruby.lint": {
    "rubocop": {
      "command": "bin/rubocop",
      "useBundler": false,
    },
  },
  // end specific to github/github
}
